<% include ../header.ejs %>

    <div class="row">
		<div class="span12">
			<h1>All tournaments</h1>
		</div>
		<div class="span12">
			<a href="/tournament/create">Create a tournament</a>
		</div>
	</div>
    
    <% if (typeof tournaments == 'undefined') { %>
	<div class="row shift-down">
		<div class="span12">
			<div class="alert alert-warning"><strong>There are no tournaments in the database!</strong></div>	
		</div>
	</div>
		
    <% } else { %>
    
    <table class="table table-striped">
		<thead>
			<tr>
				<th>Tournament</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Sport</th>
				<th>Tags</th>
			</tr>
		</thead>
		<tbody>
			<% for (var i = 0; i < tournaments.length; i++) { %>
			<tr>
				<% var tournament = tournaments[i] %>
				<td><a href="/tournament/view/<%= tournament.id %>"><%= tournament.name %></a></td>
				<td><%= tournament.start_date %></td>
				<td><%= tournament.end_date %></td>
				<td><%= tournament.sport %></td>
				<td><%= tournament.tags %></td>
			</tr>
			<% } %>
		</tbody>
	</table>
	
	<% } %>
<% include ../footer.ejs %>

